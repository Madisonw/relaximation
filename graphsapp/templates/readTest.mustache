var clients = {{clients}};
var results = JSON.parse('{{{results}}}');
var line = [];
results.forEach(function (r) {
  // var a = (r.reads.average < r.reads.last) ? r.reads.average : (r.reads.average + (r.reads.last - r.reads.average))
  // var a = r.reads.average;
  if (r.reads.clients == clients) {
    if (r.reads.last > r.reads.average) {
      a = r.reads.average + (r.reads.last - r.reads.average)
    } else {
      a = r.reads.average;
    }
    line.push([r.time, a])
  }
})
$.plot($("#placeholder"), [line])
